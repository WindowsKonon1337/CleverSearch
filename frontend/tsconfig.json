{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "ESNext",
    "target": "es5",
    "jsx": "react-jsx",
    "allowJs": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@models/*":["./src/models/*"],
      "@store/*":["./src/store/*"],
      "@api/*":["./src/api/*"],
      "@icons/*":["./public/icons/*"],
      "@pages/*":["./src/pages/*"],
      "@widgets/*":["./src/widgets/*"],
      "@feature/*":["./src/feature/*"],
      "@entities/*":["./src/entities/*"],
      "@helpers/*":["./src/helpers/*"],
    },
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
}
